<footer class="post-footer">
  {{!-- {{#unless feature_image}}
    <button class="button-text post-footer-play"><i class="icon icon-play"></i> {{t 'Play'}}</button>
  {{/unless}} --}}
  {{#if og_description}}
    <a class="button-text post-footer-download" href="{{og_description}}" target="_blank" rel="noopener noreferrer"><i class="icon icon-download"></i> {{t 'Download'}}</a>
  {{/if}}
  <a class="button-text post-footer-more" href="{{url}}"><i class="icon icon-chevron-right"></i> {{t 'Read more'}}</a>
</footer>