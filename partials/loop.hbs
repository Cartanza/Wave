<article class="{{post_class}} post-{{id}}">
  {{#if feature_image}}
    {{> post-media ratio="square"}}
  {{/if}}
  <div class="post-wrapper">
    {{> post-header}}
    {{#if excerpt}}
      <div class="post-excerpt">
        {{excerpt words="25"}}
      </div>
    {{/if}}
    {{> post-footer}}
  </div>
</article>